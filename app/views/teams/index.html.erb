<% provide(:title, "Home") %>


  <% @teams.each do |team| %>
    <div class="card">
      <div class="card-category"><%= team.abbreviation %></div>
      <div class="card-description">
        <h2><%= team.name %></h2>
      </div>
      <%= image_tag "#{team.crest}", alt: "#{team.slug}-Logo", class:"card-crest" %>
      <%= link_to "", team_path(team), class:"card-link" %>
    </div>
  <% end %>
